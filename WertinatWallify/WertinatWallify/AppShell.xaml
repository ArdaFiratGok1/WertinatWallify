<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="WertinatWallify.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:WertinatWallify.Views"
    Shell.FlyoutBehavior="Disabled">

    <TabBar>
        <ShellContent
            Title="Galeri"
            ContentTemplate="{DataTemplate views:GalleryPage}"
            Route="GalleryPage" />

        <ShellContent
            Title="Favoriler"
            ContentTemplate="{DataTemplate views:FavoritesPage}"
            Route="FavoritesPage" />
    </TabBar>

</Shell>