<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:WertinatWallify.ViewModels"
             xmlns:toolkit="http://schemas.microsoft.com/dotnet/2022/maui/toolkit"
             x:DataType="viewmodels:FavoritesViewModel"
             x:Class="WertinatWallify.Views.FavoritesPage"
             Title="Favoriler"
             Shell.NavBarIsVisible="False">
    <ContentPage.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#2c3e50" Offset="0.0" />
            <GradientStop Color="#34495e" Offset="1.0" />
        </LinearGradientBrush>
    </ContentPage.Background>

    <ContentPage.Behaviors>
        <toolkit:EventToCommandBehavior
            EventName="Appearing"
            Command="{Binding LoadFavoritesCommand}" />
    </ContentPage.Behaviors>

    <Grid RowDefinitions="Auto, *">
        <Label Grid.Row="0"
               Text="Favorilerim"
               TextColor="White"
               FontSize="32"
               FontAttributes="Bold"
               HorizontalOptions="Center"
               Margin="0,40,0,20"/>

        <CollectionView Grid.Row="1"
                        ItemsSource="{Binding FavoriteWallpapers}"
                        SelectionMode="None">
            <CollectionView.ItemsLayout>
                <GridItemsLayout Orientation="Vertical" Span="2" HorizontalItemSpacing="15" VerticalItemSpacing="15"/>
            </CollectionView.ItemsLayout>
            <CollectionView.ItemTemplate>
                <DataTemplate x:DataType="viewmodels:WallpaperViewModel">
                    <Border StrokeShape="RoundRectangle 12"
                            StrokeThickness="0"
                            Padding="0"
                            HeightRequest="250">
                        <Border.Shadow>
                            <Shadow Brush="Black" Offset="10,10" Radius="20" Opacity="0.4"/>
                        </Border.Shadow>

                        <Grid>
                            <Image Source="{Binding Wallpaper.ThumbnailUrl}" Aspect="AspectFill"/>

                            <Grid>
                                <Grid.Background>
                                    <LinearGradientBrush StartPoint="0,1" EndPoint="0,0">
                                        <GradientStop Color="#CC000000" Offset="0.0"/>
                                        <GradientStop Color="Transparent" Offset="0.7"/>
                                    </LinearGradientBrush>
                                </Grid.Background>

                                <Grid VerticalOptions="End" Padding="10" ColumnDefinitions="*, Auto">
                                    <Label Grid.Column="0"
                                           Text="{Binding Wallpaper.Name}"
                                           TextColor="White"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    <ImageButton Grid.Column="1"
                                                 Source="{Binding FavoriteIcon}"
                                                 HeightRequest="24"
                                                 WidthRequest="24"
                                                 BackgroundColor="Transparent"
                                                 Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:FavoritesViewModel}}, Path=ToggleFavoriteCommand}"
                                                 CommandParameter="{Binding .}"/>
                                </Grid>
                            </Grid>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <StackLayout Grid.Row="1"
                     IsVisible="{Binding HasNoFavorites}"
                     VerticalOptions="Center" Spacing="10">
            <Label Text="ðŸ’”" FontSize="50" HorizontalOptions="Center"/>
            <Label Text="HenÃ¼z favoriniz yok." TextColor="White" FontSize="20" FontAttributes="Bold" HorizontalOptions="Center"/>
        </StackLayout>
    </Grid>
</ContentPage>